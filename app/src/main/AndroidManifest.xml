<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dinh.whatsfordinner">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MealsActivity"
            android:label="@string/meals_title" />
        <activity
            android:name=".RecipesActivity"
            android:label="@string/recipes_title" />
        <activity
            android:name=".GroceriesActivity"
            android:label="@string/groceries_title" />
        <activity
            android:name=".NewRecipeActivity"
            android:label="@string/new_recipe_title" />
        <activity
            android:name=".RecipeDetailActivity"
            android:label="@string/recipe_detail_title" />
        <activity android:name=".NutritionActivity"
            android:label="@string/nutrition_title" />
    </application>

</manifest>